{
    "tasks": {
        "up": "deno run --allow-net --allow-read https://deno.land/std@0.198.0/http/file_server.ts . -p 1123",
        "t": "deno test --parallel src/ test/ tools/ labs/fast_emulator",
        "w": "deno test --watch src/ test/ tools/ labs/fast_emulator/",
        "cy": "node ./node_modules/.bin/cypress open",
        "cy-run": "node ./node_modules/.bin/cypress run",
        "lint": "deno lint",
        "fmt": "deno fmt",
        "chore": "deno upgrade && npm audit && git gc",
        "bench": "deno bench --no-check test/bench.js",
        "bundle": "deno run --allow-net=deno.land,registry.npmjs.org --allow-env --allow-read --allow-write --allow-run build.ts",
        "pre-commit": "deno fmt --check && deno task lint && deno task t"
    },
    "exclude": [
        "node_modules/",
        "cypress_default/",
        "frontend/index.dist.js"
    ],
    "lint": {
        "exclude": [
            "doc/apgjson/"
        ],
        "rules": {
            "include": ["no-throw-literal", "no-sparse-arrays", "no-eval"],
            "exclude": [
                "ban-ts-comment",
                "no-unused-vars",
                "no-this-alias",
                "no-inferrable-types"
            ]
        }
    },
    "fmt": {
        "indentWidth": 4
    }
}
